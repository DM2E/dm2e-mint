	<target name="tomcat-stop">
		 <exec executable="${tomcat.home}/bin/shutdown.bat" spawn="true">
		      <env key="CATALINA_HOME" value="${tomcat.home}"/>
		</exec>
	</target>


	<target name="tomcat-start">
		 <exec executable="${tomcat.home}/bin/startup.bat" spawn="true">
		      <env key="CATALINA_HOME" value="${tomcat.home}"/>
		</exec>
	</target>

</project>
